<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Performance"
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="CPU Core"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/sp_cpu_core"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_osd_fps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Show FPS"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_perf_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Performance Overlay"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_hw_readbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Hardware Readbacks"
            app:useMaterialThemeColors="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ee_cycle_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EE Cycle Rate: 0"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_ee_cycle_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="0"
                android:valueFrom="-3"
                android:valueTo="3"
                android:stepSize="1"
                app:haloRadius="16dp"
                app:labelBehavior="gone"
                app:tickVisible="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ee_cycle_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EE Cycle Skip: 0"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_ee_cycle_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="3"
                android:stepSize="1"
                app:haloRadius="16dp"
                app:labelBehavior="gone"
                app:tickVisible="false" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_vu_thread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="VU Thread (MTVU)"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_wait_loop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Wait Loop Detection"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_intc_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="INTC Spin Detection"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_mvu_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="mVU Flag Hack"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_instant_vu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Instant VU1"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_fast_cdvd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fast CDVD"
            app:useMaterialThemeColors="true" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
