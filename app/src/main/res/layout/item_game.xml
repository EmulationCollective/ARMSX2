<?xml version="1.0" encoding="utf-8"?>
<!-- Single game tile item used in the game grid (portrait cover aspect) -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	android:background="@drawable/bg_game_tile"
	android:focusable="true"
	android:clickable="true"
	android:focusableInTouchMode="true">

	<ImageView
		android:id="@+id/img_cover"
		android:layout_width="0dp"
		android:layout_height="0dp"
	android:scaleType="fitCenter"
	android:adjustViewBounds="true"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintDimensionRatio="2:3"/>

	<!-- Overlay fallback: show filename centered when no cover image is available -->
	<TextView
		android:id="@+id/tv_cover_fallback"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
	android:textColor="?attr/colorOnSurface"
		android:textSize="14sp"
		android:textStyle="bold"
		android:maxLines="4"
		android:ellipsize="end"
		android:padding="12dp"
		android:visibility="gone"
		app:layout_constraintTop_toTopOf="@+id/img_cover"
		app:layout_constraintBottom_toBottomOf="@+id/img_cover"
		app:layout_constraintStart_toStartOf="@+id/img_cover"
		app:layout_constraintEnd_toEndOf="@+id/img_cover"/>

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
	android:textColor="?attr/colorOnSurface"
		android:textSize="14sp"
		android:maxLines="2"
		android:ellipsize="end"
		android:text="Game Title"
		app:layout_constraintTop_toBottomOf="@+id/img_cover"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
